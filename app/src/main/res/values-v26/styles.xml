<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="OnboardingTitleStyle">
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingHorizontal">@dimen/padding_horizontal</item>
        <item name="android:textColor">@color/colorLight</item>
        <item name="android:textSize">@dimen/onboarding_title</item>
    </style>

    <style name="ShoePickerImageStyle">
        <item name="android:layout_marginHorizontal">@dimen/margin_medium</item>
        <item name="android:background">@drawable/background_shoes_picker</item>
    </style>

    <style name="OnboardingMessageStyle">
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingHorizontal">@dimen/margin_large</item>
        <item name="android:textColor">@color/colorLight</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="EmptyListTitleStyle">
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingHorizontal">@dimen/padding_horizontal</item>
        <item name="android:textSize">@dimen/empty_view_title</item>
    </style>

    <style name="EmptyListMessageStyle">
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingHorizontal">@dimen/padding_horizontal</item>
        <item name="android:textSize">@dimen/text_base</item>
    </style>
</resources>