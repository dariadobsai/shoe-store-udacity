<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/shoe_sneakers"
            style="@style/ShoePickerImageStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_sneaker" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/shoe_boots"
            style="@style/ShoePickerImageStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_boot" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/shoe_high_heels"
            style="@style/ShoePickerImageStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_high_heels" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/shoe_slipper"
            style="@style/ShoePickerImageStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_slipper" />
    </LinearLayout>
</layout>