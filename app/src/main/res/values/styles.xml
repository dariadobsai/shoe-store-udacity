<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="fontFamily">@font/arima_madurai</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="ApplicationNameToolbarStyle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="fontFamily">@font/aladin</item>
        <item name="titleTextAppearance">@style/ApplicationNameToolbarTextStyle</item>
    </style>

    <style name="ApplicationNameToolbarTextStyle">
        <item name="titleTextColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/application_name</item>
    </style>

    <style name="BottomNavigationDrawer">
        <item name="backgroundTint">@color/colorBottomAppDrawer</item>
    </style>

    <style name="HintAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="ShoePickerImageStyle">
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:background">@drawable/background_shoes_picker</item>
    </style>

    <style name="ShoeNameStyle">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="ShoeSizeStyle">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_base</item>
    </style>

    <style name="OnboardingTitleStyle">
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/padding_horizontal</item>
        <item name="android:textColor">@color/colorLight</item>
        <item name="android:textSize">@dimen/onboarding_title</item>
    </style>

    <style name="OnboardingTitleStyle.WelcomeTitle">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="OnboardingMessageStyle">
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/margin_large</item>
        <item name="android:paddingEnd">@dimen/margin_large</item>
        <item name="android:textColor">@color/colorLight</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="OnboardingMessageStyle.WelcomeMessage">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="ButtonGetStartedStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/padding_horizontal</item>
        <item name="android:backgroundTint">@color/colorLight</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="ButtonGetStartedStyle.WelcomeButton">
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="EmptyListTitleStyle">
        <item name="android:layout_marginTop">@dimen/margin_top</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/padding_horizontal</item>
        <item name="android:textSize">@dimen/empty_view_title</item>
    </style>

    <style name="EmptyListMessageStyle">
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/padding_horizontal</item>
        <item name="android:textSize">@dimen/text_base</item>
    </style>

    <style name="LoginLabelStyle">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="LoginInputFieldStyle">
        <item name="android:backgroundTint">@color/colorAccent</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="LoginInputFieldStyle.Password">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="LoginErrorMessageStyle">
        <item name="android:textColor">@color/colorError</item>
        <item name="android:textSize">@dimen/text_extra_small</item>
    </style>

    <style name="LoginButtonStyle">
        <item name="android:layout_marginTop">@dimen/padding_horizontal</item>
        <item name="android:backgroundTint">@color/button_states</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SignUpButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:textColor">@color/button_sign_up_states</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
